var express = require("express");
var bodyParser = require("body-parser");
var fs = require("fs");

var app = express();

var urlencodedParser = bodyParser.urlencoded({extended: false});

app.engine('ejs', require('ejs').renderFile);
app.set("view engine", "ejs");

app.use("/assets", express.static("assets"));

app.get("/home", function(req, res){
  res.render("index.ejs");
});

app.get("/signup", function(req, res){
  res.render("signup.ejs", {qs: req.query});
});

app.post("/signup", urlencodedParser, function(req, res) {
  var data = req.body;
  console.log('>>Req Body: ', data);
  var person = fs.readFileSync('userData.json')
  var perjson = JSON.parse(person);
  console.log('>>Perjson: ', perjson);
  perjson = JSON.stringify(data, null, 4);
  fs.appendFileSync('userData.json', (',\n' + perjson))
  console.log('>>User Data Saved<<');
  res.render("signup-success.ejs", { data });
});

app.listen(3000);

console.log(">>Now listening on port 3000<<")
